<core:FragmentDefinition
    xmlns:core="sap.ui.core"
    xmlns="sap.m"
    xmlns:form="sap.ui.layout.form"
>
    /
    <Dialog
        id="idLoginDialogPopup"
        resizable="true"
        draggable="true"
        contentWidth="30%"
        title="Enter Details"
    >
        <content>
            <form:SimpleForm
                id="idLoginForm"
                editable="true"
                layout="ResponsiveGridLayout"
                labelSpanXL="3"
                labelSpanL="3"
                labelSpanM="3"
                labelSpanS="12"
                adjustLabelSpan="false"
                emptySpanXL="4"
                emptySpanL="4"
                emptySpanM="4"
                emptySpanS="0"
                columnsXL="1"
                columnsL="1"
                columnsM="1"
                singleContainerFullSize="false"
            >
                <VBox id="idVbox">
                    <Label
                        id="idUserInputLable"
                        text="User ID"
                    />
                    <Input
                        id="idUserIDInput"
                        placeholder="User ID"
                        value=""
                    />
                    <Label
                        id="idPassword"
                        text="Password"
                    />
                    <Input
                        id="idPasswordInput"
                        placeholder="Password"
                        type="Password"
                        value=""
                    />
                    <HBox
                        id="idHboxCreate"
                        class="buttonsHbox"
                    >
                        <Button
                            class="buttons"
                            id="idLoginBtn"
                            text="Login"
                            press="onUserLoginPress"
                            type="Success"
                        />
                        <!-- <Button
                            class="buttons"
                            id="idSignUpBtn"
                            text="Signup"
                            press="onSignUpPress"
                            type="Default"
                        /> -->
                        <Button
                            class="buttons"
                            id="idCloseLoginPopUp"
                            text="Close"
                            press="onCloseLoginDailog"
                            type="Reject"
                        />
                    </HBox>
                </VBox>
            </form:SimpleForm>
        </content>
    </Dialog>
</core:FragmentDefinition>
